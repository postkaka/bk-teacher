.calendar-title .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 50rpx;
}

.calendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.calendar-title .today {
    float: right;
    margin-top: 10rpx;
}

/* 星期 */

.calendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 25rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #333333;
}

.calendar-week .item {
    width: 60rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 35rpx;
}

/* 日期 */

.calendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx 15rpx;
    box-sizing: border-box;
}

.calendar-container .grid {
    display: inline-block;
    width: 60rpx;
    height: 35rpx;
    line-height: 60rpx;
    margin: 10rpx 0 10rpx 35rpx;
    position: relative;
    z-index: 1;
    font-size: 28rpx;
    color: #333333;
}

.calendar-container .grid .self {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background: #81CDE4;
    border: 3rpx solid #fff;
}

.calendar-container .grid.gray {
    color: #ccc;
}

.calendar-container .grid .wrap.select {
    background: #60ADE1;
    border-radius: 40rpx;
    color: #fff;
    /* width: 80%; */
    margin: 0 auto;
}

/* 滚动展示 */

.calendar-x {
    white-space: nowrap;
    padding: 20rpx 0;
    height: 110rpx;
}

.calendar-x .grid {
    display: inline-block;
    position: relative;
    z-index: 1;
    width: 70rpx;
    text-align: center;
    background: #f5f5f5;
    border-radius: 10rpx;
    margin-left: 20rpx;
}

.calendar-x .grid:last-child {
    margin-right: 20rpx;
}

.calendar-x .grid .self {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background: rgb(49, 120, 228);
    border: 3rpx solid #fff;
}

.calendar-x .grid.gray {
    color: #ccc;
}

.calendar-x .grid .wrap.select {
    background: rgb(49, 120, 228);
    border-radius: 10rpx;
    color: #fff;
    margin: 0 auto;
}

.bottom {
    width: 614rpx;
    height: 100rpx;
    border-top: 2rpx solid #333333;
    display: flex;
    display:-webkit-flex;
    justify-content: space-between;
    margin-left: 68rpx;
}
