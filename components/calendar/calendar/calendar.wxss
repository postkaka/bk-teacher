.calendar {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    box-sizing: border-box;
}

/* 标题 */
.title {
    width: 614rpx;
    height: 100rpx;
    border-bottom: 2rpx solid #DDDDDD;
    display: flex;
    flex-wrap: wrap;
    margin-left: 68rpx;
}

.leftIcon {
    width: 28rpx;
    height: 28rpx;
    opacity: 1;
    margin: 36rpx 0;
}

.titleText {
    width: 558rpx;
    height: 50rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
}

