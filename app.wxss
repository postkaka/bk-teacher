page {
  font-family: PingFang SC;
  background: #F5F5F5;
  overflow-x:hidden;
}

/* 布局样式 */
.flex-a {
  display: flex;
  
}
.flex-b {
  flex: 1;
}
.flex-c {
  flex: 4;
}
/* 横向对齐 */
.justify-b {
  justify-content: center;
}
.justify-c {
  justify-content: space-around;
}
.justify-d {
  justify-content: space-between;
}
/* 竖向对齐 */
.align-a {
  align-self: center;
}

/* 换行 */
.justify-a {
  flex-wrap: wrap;
  justify-content:start;
}
/* 文字横向竖向对齐 */
.align-b {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
/* 蒙层 */
.bg {
  height: 100%;
	width: 100%;
	position: fixed;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 2;
	top: 0;
	left: 0;
}
.bg-item {
  width: 100%;
  height: 650rpx;
  position: fixed;
  border-radius: 40rpx 40rpx 0px 0px;
  background: #FFFFFF;
  bottom: 0;
  left: 0;
  z-index: 3;
}
._bg {
  height: 100%;
	width: 100%;
	position: fixed;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 2;
	top: 40%;
	left: 0;
}
._bg-item {
  width: 100%;
  position: fixed;
  background: #FFFFFF;
  left: 0;
  z-index: 3;
}
/* 隐藏样式 */
.none {
  display: none;
}
/* 提示文字 */
.hint {
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 16rpx;
}
/* 按钮定位 */
.btn {
  position: absolute;
  left: 0;
  bottom: 32rpx;
  width: 100%;
}
/* tab */
.tabs {
  padding-top: 20rpx;
  height: 80rpx;
  background: #FFFFFF;
}
/* 苹果开关 */
._pic {
  zoom: .7;
}
/* 搜索框 */
.search {
  background: #FFFFFF;
  height: 140rpx;
  padding-top: 20rpx;
}
/* 样式外壳 */
.xxx{
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  margin: 16rpx;
  border-radius: 30rpx;
}