/* pages/spendingRecord/spendingDetails/spendingDetails.wxss */
.spending{
  margin: 16rpx; 
  height: 524rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
.pic {
  font-size: 40rpx;  
  color: #F89470;
}
/* 蒙层 */
.bg-tab {
  margin: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #60ADE1;
}
/* 备注 */
.remark{
  margin: 16rpx;
  height: 490rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
.remark-text {
  position: relative;
  padding: 32rpx;
  width: 100%;
  height: 213rpx;
  top:0rpx;
  overflow-x:hidden;
}
.text-area{
  margin-top: 8rpx;
  font-size:24rpx;
  height: 100rpx;
}
.last-text {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  left: 85%;
  bottom: -50rpx;
}
/* 蒙层 */
.bg-image {
  margin: 111rpx 0 43rpx 0;
}
.bg-text-1 {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}
.bg-button {
  height: 80rpx;
  background: linear-gradient(180deg, #96CBEB 0%, #60ADE1 100%);
  box-shadow: 0px 10rpx 20rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 150rpx 16rpx 20rpx 16rpx;
  font-size: 34rpx;
  color: #FFFFFF;
}

