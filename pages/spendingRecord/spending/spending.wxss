/* pages/spendingRecord/spending/spending.wxss */
.time {
  padding: 0 32rpx 32rpx 32rpx;
  background: #FFFFFF;
  border-radius: 0px 0px 30rpx 30rpx;
}
.text-2 {
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #333333;
}
.text-3 {
  font-size: 44rpx;
  color: #F89470;
}
.text-4 {
  margin-left: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #F89470;
}
/* 蒙层 */
.bg-tab {
  margin: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #60ADE1;
}
._bgs {
  height: 100%;
	width: 100%;
	position: fixed;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 2;
  left: 0;
  top:25%;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  
}
/* 全部分类 */
.left {
  float: left;
}
.right {
  float: right;
  margin: 32rpx 32rpx 0 0;
  color: #333333;
  font-size: 28rpx;
}
.span {
  font-size: 28rpx;
  font-weight: bold;
  color: #F89470;
}

/* 信息 */
.list {
  margin: 100rpx 16rpx 16rpx 16rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  height: 100vh;
  clear:both;
}
.listItem {
  padding: 32rpx;
  font-size: 28rpx;
  color: #333333;
}
.line {
  border-bottom: 2rpx solid #DDDDDD;
}
.times {
  font-size: 24rpx;
  color: #999999;
}
.title {
  margin-bottom: 8rpx;
}
.smallLine {
  height: 23rpx;
  border: 2rpx solid #999999;
  margin: 0 8rpx 0 8rpx;
}