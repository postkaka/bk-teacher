/* pages/mineClass/pay/pay.wxss */
/* 头部 */
.pic {
  height: 144rpx;
  background: #FFFFFF;
  font-size: 28rpx;
  color: #333333; 
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 0px 0px 30rpx 30rpx;
}
.pic-src {
  margin: 0 17rpx 0 32rpx;
}
.pic-name {
  margin-right: 8rpx;
  font-weight: bold;
}
.src-img {
  margin-right: 32rpx;
}
.src-box {
  border: 1rpx solid #539BCB;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #539BCB;
  width: 97rpx;
  height: 40rpx;
  margin-left: 8rpx;
}
/* 课程 */
.box{
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  margin: 16rpx;
  border-radius: 30rpx;
}
/* 操作 */
.last {
  margin: -40rpx 16rpx 36rpx 16rpx;
  position: absolute;
  bottom: 30rpx;
}
.pay {
  margin-left: 8rpx;
  color: #F89470;
}
