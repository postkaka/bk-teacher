/* pages/wallet/prepaidInformation/prepaidInformation.wxss */
.header {
  height: 120rpx;
  background: #FFFFFF;
  box-shadow: 0px 3rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 0px 0px 30rpx 30rpx;
}
.prepaid {
  margin: 16rpx;
  height: 254rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
/* 输入框 */
.money {
  padding: 32rpx;
  font-size: 28rpx;
}
.moneys {
  color: #F89470;
}
.bg-change {
  width: 504rpx;
  height: 49rpx;
  background: #FFFFFF;
  border: 1rpx solid #999999;
  border-radius: 42rpx;
  margin-left: 16rpx;
}
.bg-input {
  width: 100%;
  padding: 32rpx;
}
._bg {
  margin-right: 32rpx;
  color: #999999;
}
.prepaid-text {
  color: #999999;
  font-size: 20rpx;
  margin:8rpx 0 0 16rpx;
}

/* 支付信息 */
.payment {
  margin: 16rpx;
  height: 314rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
/* 业绩归属 */
.performance {
  height: 419rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  margin: 16rpx;
  border-radius: 30rpx;
}
/* 备注 */
.remark{
  margin: 16rpx;
  height: 422rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
.remark-text {
  position: relative;
  padding: 32rpx;
  width: 100%;
  height: 213rpx;
  top:0rpx;
  overflow-x:hidden;
}
.text-area{
  margin-top: 8rpx;
  font-size:24rpx;
  height: 100rpx;
}
.last-text {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  left: 85%;
  bottom: 20rpx;
}
.last {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  margin-left: 32rpx;
  bottom: 90rpx;
}
/* 按钮 */
._last {
  margin: -40rpx 16rpx 36rpx 16rpx;
  position:relative;
  bottom: -80rpx;
}
.pay {
  margin-left: 8rpx;
  color: #F89470;
}
