/* pages/news/news.wxss */
.type {
    color: #F89470;
}
/*  */
.remark-text {
    position: relative;
    padding: 32rpx;
    width: 100%;
    height: 400rpx;
    top:-60rpx;
    overflow-x:hidden;
  }
  .text-area{
    margin-top: 8rpx;
    font-size:24rpx;
    height: 100rpx;
  }
  .last-text {
    font-size: 20rpx;
    color: #999999;
    position: relative;
    left: 85%;
    bottom: -100rpx;
  }
  .last {
    font-size: 20rpx;
    color: #999999;
    position: relative;
    margin-left: 32rpx;
    bottom: -80rpx;
  }
  .last-camera {
    margin-left: 32rpx;
    position: relative;
    bottom: 50rpx;
    width: 88rpx;
    height: 88rpx;
    background: #FFFFFF;
    border: 2rpx solid #999999;
    border-radius: 10rpx;
    font-size: 50rpx;
    color:#999999;
  }
  /* 蒙层 */
  .bg-image {
    margin: 111rpx 0 43rpx 0;
  }
  .bg-text-1 {
    text-align: center;
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
  }
  .bg-text-2 {
    font-size: 28rpx;
    margin: 32rpx 0 0 0;
    text-align: center;
  }
  .bg-text-3 {
    font-size: 28rpx;
    margin: 5rpx 0 60rpx 0;
    text-align: center;
  }
  .bg-button {
    height: 80rpx;
    background: linear-gradient(180deg, #96CBEB 0%, #60ADE1 100%);
    box-shadow: 0px 10rpx 20rpx rgba(153, 153, 153, 0.16);
    border-radius: 30rpx;
    margin: 0 16rpx 20rpx 16rpx;
    font-size: 34rpx;
    color: #FFFFFF;
  }
  