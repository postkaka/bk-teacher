/* pages/recruit/classPay/classPay.wxss */
.pic {
  height: 144rpx;
  background: #FFFFFF;
  font-size: 28rpx;
  color: #333333; 
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 0px 0px 30rpx 30rpx;
}
.pic-src {
  margin: 0 17rpx 0 32rpx;
}
.pic-name {
  margin-right: 8rpx;
  font-weight: bold;
}
.src-img {
  margin-right: 32rpx;
}
.src-box {
  border: 1rpx solid #539BCB;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #539BCB;
  width: 97rpx;
  height: 40rpx;
  margin-left: 8rpx;
}

/* 支付信息 */
.payInform {
  height: 524rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
/* 支付调整 */
.bgs {
  top: 280rpx;
}
.bg-title {
  padding: 32rpx;
  font-size: 34rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #DDDDDD;
}
.bg-change {
  height: 72rpx;
  background: #FFFFFF;
  border: 1rpx solid #999999;
  border-radius: 42rpx;
  margin: 160rpx 50rpx 0 50rpx;
}
.bg-input {
  width: 100%;
  padding: 32rpx;
}
._bg {
  margin-right: 32rpx;
}
/* 业绩 */
.performance {
  height: 419rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
/* 备注 */
.remark {
  height: 422rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
.remark-text {
  padding: 32rpx;
  width: 100%;
  height: 17vh;
}
.text-area {
  width: 90vw;
  height: 17vh;
}
.last-text {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  left: 85%;
  bottom: 70rpx;
}
/* 报名信息 */
.apply {
  height: 734rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
/* 报名班级 */
.class {
  height: 209rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
/* 操作 */
.last {
  margin: -40rpx 16rpx 36rpx 16rpx;
  position:relative;
  bottom: -80rpx;
}
.pay {
  margin-left: 8rpx;
  color: #F89470;
}

._pic {
  zoom: .7;
 }