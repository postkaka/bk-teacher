/* pages/recruit/classRecord/classRecord.wxss */
/* 课时记录 */
.record {
  margin: 16rpx;
  height: 531rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
}
.line {
  margin: 32rpx 40rpx 16rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
}
.lines {
  margin: 16rpx 40rpx 16rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
}
.liness {
  padding: 0 40rpx 32rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #DDDDDD;
}

.smalllist {
  height: 257rpx;
  border: 2rpx solid #DDDDDD;
  background-color: #FFFFFF;
  margin: 16rpx;
  border-radius: 30rpx;   
}
.smalllist-fist {
  display: flex;
  padding: 32rpx 40rpx 32rpx 32rpx;
  justify-content:space-between;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 46rpx;
  color: #333333;
  opacity: 1;
  border-bottom: 1rpx solid #DDDDDD;
}
.smalllist-fist-view-change {
  margin-left: 8rpx;
  margin-right: 10rpx;
}
.smalllist-fist-view {
  display: flex;
}