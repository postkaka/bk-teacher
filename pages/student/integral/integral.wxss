/* pages/student/integral/integral.wxss */
.integral {
  height: 402rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-self: center;
}
.integral-item {
  display: flex;
  justify-content: center;
}
.integral-ball {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(180deg, #96CBEB 0%, #60ADE1 100%);
  border-radius: 50%;
  font-size: 53rpx;
  font-family: DIN;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
}
.integral-text {
  margin-top: 32rpx;
  font-size: 50rpx;
  font-weight: 400;
  text-align: center;
}
.record {
  /* height: 612rpx; */
  background: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx rgba(153, 153, 153, 0.16);
  border-radius: 30rpx;
  margin: 16rpx;
}
.record-item {
  height: 186rpx;
  padding: 32rpx;
  font-size: 28rpx;
}
.record-type {
  color: #333333;
}
.record-remark {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}
.add {
  font-weight: bold;
  color: #333333;
}
.subtraction {
  font-weight: bold;
  color: #F89470;
}
.line {
  border-bottom: 1rpx solid #DDDDDD;
}
.btn {
  position: absolute;
  left: 0;
  bottom: 32rpx;
  width: 100%;
}