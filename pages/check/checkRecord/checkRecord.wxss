/* pages/check/checkRecord/checkRecord.wxss */
/* 信息 */
.infor {
  background: #60ADE1;
  padding:32rpx 0 70rpx 0 ;
}
.infor-item {
  font-size: 28rpx;
  color: #FFFFFF;
}
.infor-class {
  margin: 8rpx 0 8rpx 0;
}
/* tab */
.tab {
  margin: -40rpx 0 30rpx 0;
  height: 96rpx;
  background: #FFFFFF;
  opacity: 1;
  border-radius: 50rpx 50rpx 0px 0px;
}
._tab{
  margin: 30rpx;
}
/* 展开 */
.type {
  padding: 32rpx 0 32rpx 0; 
  font-size: 28rpx;
  font-weight: bold;
  color: #F89470;
}
.padding{
  padding: 18rpx 0 0 0;
}
/* 大纲 */
._xxx{
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #333333;
}
.small {
  font-size: 20rpx;
  color: #333333;
}
.src {
  padding: 115rpx 0 115rpx 0;
  font-size: 25rpx;
  color: #999999;
}
/* 备注 */
.remark-text {
  position: relative;
  padding: 32rpx;
  width: 100%;
  height: 100rpx;
  top:-60rpx;
  overflow-x:hidden;
}
.text-area{
  margin-top: 8rpx;
  font-size:24rpx;
  height: 100rpx;
}
.last-text {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  left: 85%;
  bottom: -80rpx;
}
.last {
  font-size: 20rpx;
  color: #999999;
  position: relative;
  margin-left: 32rpx;
  bottom: -60rpx;
}
.last-camera {
  margin-left: 32rpx;
  position: relative;
  bottom: 100rpx;
  width: 88rpx;
  height: 88rpx;
  background: #FFFFFF;
  border: 2rpx solid #999999;
  border-radius: 10rpx;
  font-size: 50rpx;
  color:#999999;
}